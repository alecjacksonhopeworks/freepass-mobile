{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@screens/*": ["./src/app/*"],
      "@context/*": ["./src/app/context*"],
      "@hooks/*": ["./src/app/hooks*"],
      "@db/*": ["./src/db/*"]
    }
  }
}