{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@screens/*": ["src/app/*"],
      "@context/*": ["src/app/context*"],
      "@hooks/*": ["src/app/hooks*"],
      "@db/*": ["src/app/db*"]
    }
  }
}
